    <div class="blog-story-share__header">
      <h2>{{ freeformMacros.freeformText('title', freeform) }}</h2>
    </div>
    <div class="blog-story-share__body">
      {{ freeformMacros.freeformText('body', freeform) }}
    </div>
  </div>
</div>